@using PruebaTecnicaSICSA.Models;

<div id="MyModal"></div>

@if (!String.IsNullOrEmpty(ViewBag.Message as string) && !String.IsNullOrEmpty(ViewBag.TypeMessage as string))
{
    <br />
    <div class="@ViewBag.TypeMessage" role="alert">
        <strong>@ViewBag.Message</strong>
        <button type="button" class="alert-dismissable fade show close" data-dismiss="alert">&times;</button>
    </div>
}
<br />

@Html.ActionLink("Nueva Categoria", "Create", "Categories", htmlAttributes: new { Class = "btn btn-info class='glyphicon-plus'></span>", Style = "padding" })


<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th style="display:none"></th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Categoria</th>
                        <th>Opciones</th>
                    </tr>

                </thead>
                @if (ViewBag.Products as List<product> != null)
                {
                    <tbody id="TableCategoryBody">
                        @foreach (var item in ViewBag.Products as List<product>)
                        {
                            <tr>
                                <td style="display:none">
                                    @item.ProductId
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.category.Name
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", routeValues: new { @item.ProductId }, htmlAttributes: new { Class = "btn btn-primary<span class='glyphicon glyphicon-pencil'></span>" })
                                    @*@Html.ActionLink("Eliminar", "Delete", routeValues: new { @item.ProductId }, htmlAttributes: new { Class = "btn btn-danger<span class='glyphicon glyphicon-trash'></span>" })*@
                                    <button type="button" id="delete" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>Eliminar</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                }


            </table>
        </div>

    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
         $('#delete').click(function (event) {

          let id = $(this).closest("tr").find("td").eq(0).html();

          let flag = confirm("¿Desea eliminar el registro?")
          if (flag) {

          location.href= "@Url.Action("getDelete")"+"?id="+id
          }





        });
    });
</script>